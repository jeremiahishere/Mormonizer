= form_for [:admin, @translation] do |f|
  -if @translation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@translation.errors.count, "error")} prohibited this translation from being saved:"
      %ul
        - @translation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :language_id
    = f.number_field :language_id
  .field
    = f.label :input_text
    = f.text_area :input_text
  .field
    = f.label :output_text
    = f.text_area :output_text
  .actions
    = f.submit 'Save'
