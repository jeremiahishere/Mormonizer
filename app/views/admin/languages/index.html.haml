.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", admin_languages_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_language_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Languages
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.admin_language.name", :default => t("activerecord.labels.name", :default => "Name"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @languages.each do |language|
          %tr{:class => cycle("odd", "even")}
            %td
              = language.id
            %td
              = link_to language.name, admin_language_path(language)
            %td
              = language.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", admin_language_path(language)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_language_path(language)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_language_path(language), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
- content_for :sidebar, render(:partial => 'sidebar')
