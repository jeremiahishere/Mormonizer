.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_languages_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_language_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_language_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Language
    .inner
      = form_for @language, :url => admin_language_path(@language), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
